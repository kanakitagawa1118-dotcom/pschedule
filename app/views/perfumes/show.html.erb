<div class="result-wrapper">

  <!-- ===== HEADER ===== -->
  <div class="result-header">
    <p class="result-sub">診断結果</p>
    <h2 class="result-main">今日のあなたの気分タイプ</h2>
  </div>


  <div class="result-grid">

    <!-- ===== LEFT MAIN RESULT ===== -->
    <%
    type_data =
    case @perfume.question

    when "1111"
    {code:"ENERGETIC TYPE", title:"今日はかなりエネルギー高めの日！", color:"energetic", energy:90, focus:80}

    when "1112"
    {code:"ACTIVE BALANCE TYPE", title:"やる気はあるけど詰め込み注意", color:"energetic", energy:75, focus:60}

    when "1121"
    {code:"CALM ACTIVE TYPE", title:"動けるけど安定重視", color:"normal", energy:60, focus:60}

    when "1122"
    {code:"LIMITED ENERGY TYPE", title:"無理は禁物", color:"normal", energy:50, focus:40}

    when "1211"
    {code:"BODY-FIRST TYPE", title:"体は動くけど頭省エネ", color:"energetic", energy:80, focus:30}

    when "1212"
    {code:"SMALL STEP TYPE", title:"1つ達成でOK", color:"normal", energy:50, focus:35}

    when "1221"
    {code:"COMFORT TYPE", title:"無理せず気分よく", color:"normal", energy:40, focus:30}

    when "1222"
    {code:"RECOVERY TYPE", title:"かなりお疲れモード", color:"tired", energy:20, focus:20}

    when "2111"
    {code:"FOCUS TYPE", title:"じっくり集中できる日", color:"energetic", energy:60, focus:90}

    when "2112"
    {code:"LIMITED FOCUS TYPE", title:"集中できるけど余裕少なめ", color:"normal", energy:45, focus:70}

    when "2121"
    {code:"REFLECTION TYPE", title:"整理に最適", color:"normal", energy:35, focus:60}

    when "2122"
    {code:"SAFE MODE TYPE", title:"安心できる作業を", color:"tired", energy:30, focus:40}

    when "2211"
    {code:"MINIMUM STEP TYPE", title:"一歩進めばOK", color:"normal", energy:30, focus:50}

    when "2212"
    {code:"LOW ENERGY TYPE", title:"5分から", color:"tired", energy:20, focus:35}

    when "2221"
    {code:"RESET TYPE", title:"整える日", color:"tired", energy:15, focus:25}

    when "2222"
    {code:"FULL REST TYPE", title:"完全オフ寄り", color:"tired", energy:5, focus:10}

    end
    %>

    <div class="result-main-card <%= type_data[:color] %>">

        <h3 class="type-name">
            <%= type_data[:code] %>
        </h3>

        <p class="type-title">
            <%= type_data[:title] %>
        </p>

        <!-- MBTI風ステータス -->
        <div class="status">

            <p>Energy</p>
            <div class="bar">
            <div class="fill" style="width:<%= type_data[:energy] %>%"></div>
            </div>

            <p>Focus</p>
            <div class="bar">
            <div class="fill" style="width:<%= type_data[:focus] %>%"></div>
            </div>

        </div>

    </div>



    <!-- ===== RIGHT SIDE CARDS ===== -->
    <div class="result-side">

      <div class="side-card">
        <h4>💡 今日のヒント</h4>
        <p>小さな達成を1つ作ろう。</p>
      </div>

      <div class="side-card">
        <h4>✨ おすすめ行動</h4>
        <p>今の気分に合ったタスクを選ぶのが鍵。</p>
      </div>

    </div>

  </div>

  <%= link_to "トップページに戻る", tweets_path, class:"back-button" %>

</div>
