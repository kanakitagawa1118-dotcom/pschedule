<%= stylesheet_link_tag 'new', :media => "all" %>

<div class="post-container">

  <p class="title">🌟新規タスク投稿フォーム🌟</p>

  <div class="back-link">
    <%= link_to "← タスク一覧に戻る", tweets_path %>
  </div>


  <%= form_for @tweet do |f| %>

    <!-- 基本情報 -->
    <div class="form-section">

      <h3 class="section-title">📝 基本情報</h3>

      <div class="field">
        <%= f.label :title, "タスク名" %>
        <%= f.text_field :title, class: "input-field" %>
      </div>

      <div class="row-fields">

        <div class="field half">
          <%= f.label :deadline, "🗓 締切" %>
          <%= f.datetime_field :deadline, class: "input-field" %>
        </div>

        <div class="field half">
          <%= f.label :estimated_time, "⏱ かかりそうな時間（分）" %>
          <%= f.number_field :estimated_time, class: "input-field" %>
        </div>

      </div>

    </div>



    <!-- 詳細 -->
    <div class="form-section">
      <h3 class="section-title">📌 メモ・詳細</h3>

      <div class="field">
        <%= f.text_area :memo, class: "textarea-field" %>
      </div>
    </div>


    <!-- タスクの種類 -->
    <div class="form-section">
      <h3 class="section-title">📑タスクの種類</h3>

      <div class="tag-list">

        <%= f.collection_check_boxes(:tag_ids, Tag.where(tag_type: "category"), :id, :name) do |tag| %>

          <label class="tag-chip">
            <%= tag.check_box %>
            <span><%= tag.text %></span>
          </label>

        <% end %>

      </div>
    </div>

    <!-- タスクの重さ -->
    <div class="form-section">
      <h3 class="section-title">📑タスクの重さ</h3>

      <div class="tag-list">

        <%= f.collection_check_boxes(:tag_ids, Tag.where(tag_type: "mood"), :id, :name) do |tag| %>

          <label class="tag-chip mood">
            <%= tag.check_box %>
            <span><%= tag.text %></span>
          </label>

        <% end %>

      </div>
    </div>

    <!-- 画像 -->
    <div class="form-section">
      <h3 class="section-title">📷画像</h3>

      <div class="field">
        <%= f.file_field :image %>
      </div>
    </div>


    <%= f.submit "投稿する", class: "submit-btn" %>

  <% end %>

</div>
